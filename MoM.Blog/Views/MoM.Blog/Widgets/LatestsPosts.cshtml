<div class="container-fluid latest-posts" *ngFor="#post of posts">
    <div class="row">
        <h1>{{post.title}}</h1>   
    </div>
    <div class="row">
        <div class="col-xs-5">
            <span class="text-muted">Rolf Veinø Sørensen</span>
        </div>
        <div class="col-xs-2">
            <span class="label label-primary">{{post.category.name}}</span>
        </div>
        <div class="col-xs-2">
            <span class="text-muted">{{post.day}}. {{post.monthName}} {{post.year}}</span>
        </div>
        <div class="col-xs-3">
            <p><i class="fa fa-tags"></i><span class="label label-default tags" *ngFor="#postTag of post.postTags">{{postTag.tag.name}}</span></p>
        </div>
    </div>
    <div class="row" [innerHTML]="post.teaser"></div>
    <div class="row text-xs-right"><button type="button" (click)="onPostViewMore(post)" class="btn btn-primary">read more...</button></div>
</div>
<div class="container-fluid">
    <div class="row text-muted text-xs-center">
        <nav>
            <ul class="pagination">
                <li class="page-item disabled">
                    <a class="page-link" href="#" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                </li>
                <li class="page-item active">
                    <a class="page-link" href="#">1 <span class="sr-only">(current)</span></a>
                </li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item"><a class="page-link" href="#">4</a></li>
                <li class="page-item"><a class="page-link" href="#">5</a></li>
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</div>