<div class="container-fluid margin-top margin-bottom">
    <div class="row">
        <div class="col-md-12">
            <h1>Blog Categories</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <p>Results per page</p>
            <div class="btn-group">
                <label class="btn btn-sm btn-primary" [(ngModel)]="pageSize" btnRadio="10" (click)="onPageSizeChange(10)">10</label>
                <label class="btn btn-sm btn-primary" [(ngModel)]="pageSize" btnRadio="20" (click)="onPageSizeChange(20)">20</label>
                <label class="btn btn-sm btn-primary" [(ngModel)]="pageSize" btnRadio="50" (click)="onPageSizeChange(50)">50</label>
                <label class="btn btn-sm btn-primary" [(ngModel)]="pageSize" btnRadio="100" (click)="onPageSizeChange(100)">100</label>
            </div>
        </div>
        <div class="col-md-6 text-xs-right">
            <p>Add new category</p>
            <button type="button" class="btn btn-sm btn-primary" (click)="onCategoryCreate()"><i class="fa fa-plus"></i></button>
        </div>
    </div>
    <div class="row">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th (click)="onSortChange('name')">Name</th>
                    <th (click)="onSortChange('urlslug')">UrlSlug</th>
                    <th (click)="onSortChange('postcount')">PostCount</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <tr *ngFor="let category of categories">
                    <th scope="row">{{category.name}}</th>
                    <td>{{category.urlSlug}}</td>
                    <td>{{category.postCount}}</td>
                    <td class="text-xs-right">
                        <button type="button" class="btn btn-sm btn-primary" (click)="onCategoryEdit(category)"><i class="fa fa-pencil-square-o"></i></button>
                        <button type="button" class="btn btn-sm btn-danger" (click)="onCategoryDelete(category)"><i class="fa fa-trash-o"></i></button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="row text-muted text-xs-center">
        <nav>
            <ul class="pagination">
                <li class="page-item disabled">
                    <a class="page-link" href="#" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                </li>
                <li class="page-item active">
                    <a class="page-link" href="#">1 <span class="sr-only">(current)</span></a>
                </li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item"><a class="page-link" href="#">4</a></li>
                <li class="page-item"><a class="page-link" href="#">5</a></li>
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</div>