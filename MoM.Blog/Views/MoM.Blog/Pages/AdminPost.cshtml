<blog-admin-post>
    <div class="container-fluid margin-top margin-bottom">
        <div class="row">
            <h1>{{pageTitle}}</h1>
        </div>
        <form *ngIf="!isLoading" (ngSubmit)="onSubmit()" #postForm="ngForm">
            <div class="form-group row">
                <label for="inputTitle" class="col-sm-2 form-control-label">Title</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" [(ngModel)]="post.title" required id="inputTitle" ngControl="title"  #title="ngForm" placeholder="Title">
                    <div [hidden]="title.valid || title.pristine" class="alert alert-danger">Title is required</div>
                </div>
            </div>
            <div class="form-group row">
                <label for="inputContent" class="col-sm-2 form-control-label">Teaser</label>
                <div class="col-sm-10">
                    <textarea rows="4" class="form-control" id="inputContent" [(ngModel)]="post.shortDescription" placeholder="Content"></textarea>
                </div>
            </div>
            <div class="form-group row">
                <label for="inputContent" class="col-sm-2 form-control-label">Content</label>
                <div class="col-sm-10">
                    <textarea rows="10" class="form-control" id="inputContent" [(ngModel)]="post.description" required ngControl="content" #content="ngForm" placeholder="Content"></textarea>
                    <div [hidden]="content.valid || content.pristine" class="alert alert-danger">Please write some content for the post</div>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="button" class="btn btn-primary" (click)="onCancel()">Cancel</button>
                    <button type="submit" class="btn btn-success" [disabled]="!postForm.form.valid">Submit</button>
                </div>
            </div>
        </form>
    </div>
</blog-admin-post>