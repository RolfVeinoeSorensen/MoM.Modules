<blog-admin>
    <div class="container-fluid margin-top margin-bottom">
        <div class="row">
            <div class="col-md-12">
                <h1>Blog</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 text-xs-right">
                <button type="button" class="btn btn-sm btn-primary" (click)="onPostCreate()"><i class="fa fa-plus"></i>Create post</button>
            </div>
        </div>
        <div class="row">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Title</th>
                        <th>Modified</th>
                        <th>Published</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr *ngFor="#post of posts">
                        <th scope="row">{{post.postId}}</th>
                        <td>{{post.title}}</td>
                        <td>{{post.postedDate}}</td>
                        <td>
                            <button type="button" class="btn btn-sm btn-primary" (click)="onPostEdit(post)"><i class="fa fa-pencil-square-o"></i>Edit</button>
                            <button type="button" class="btn btn-sm btn-danger"><i class="fa fa-trash-o"></i>Delete</button>
                            <button type="button" class="btn btn-sm btn-secondary"><i class="fa fa-trash-o"></i>Published</button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="row" *ngFor="#post of posts">
            <div class="col-md-6">
                <span>{{post.title}}</span>
            </div>
            <div class="col-md-3 text-xs-right">
                <button type="button" class="btn btn-sm btn-primary" (click)="onPostEdit(post)"><i class="fa fa-pencil-square-o"></i>Edit</button>
                <button type="button" class="btn btn-sm btn-danger"><i class="fa fa-trash-o"></i>Delete</button>
            </div>
            <div class="col-md-3 text-xs-right">
                <div class="dropdown">
                    <button class="btn btn-sm btn-success dropdown-toggle" type="button" id="dropdownMenuStatus-{{post.postId}}" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fa fa-eye"></i>Published
                    </button>
                    <div class="dropdown-menu" [attr.aria-labelledby]="'dropdownMenuStatus-' + post.postId">
                        <button class="dropdown-item" type="button"><i class="fa fa-eye"></i>Published</button>
                        <button class="dropdown-item" type="button"><i class="fa fa-eye-slash"></i>Unpublished</button>
                        <button class="dropdown-item" type="button"><i class="fa fa-user-secret"></i>Editors Only</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="row text-muted text-xs-center">
            <nav>
                <ul class="pagination">
                    <li class="page-item disabled">
                        <a class="page-link" href="#" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                            <span class="sr-only">Previous</span>
                        </a>
                    </li>
                    <li class="page-item active">
                        <a class="page-link" href="#">1 <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item"><a class="page-link" href="#">4</a></li>
                    <li class="page-item"><a class="page-link" href="#">5</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">Next</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</blog-admin>
